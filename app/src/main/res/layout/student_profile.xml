<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"

        />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_account_circle_black_24dp"
        android:layout_below="@+id/toolbar"
        android:layout_marginLeft="120dp" />

    <TextView
        android:id="@+id/details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="profile details"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true" />
    <LinearLayout
        android:id="@+id/contact"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:orientation="vertical"
        android:layout_below="@+id/details"
        >
        <LinearLayout
            android:id="@+id/u_layout"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/textView4"
            android:layout_marginTop="3dp"
            android:orientation="horizontal"
            android:layout_alignParentStart="true">

            <TextView
                android:layout_marginLeft="20dp"
                android:id="@+id/user_doct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="user Name "
                android:textSize="20sp"
                />

            <EditText
                android:id="@+id/user_name_student"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:text="" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/e_layout"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/u_layout"
            android:layout_marginTop="0dp"
            android:orientation="horizontal"
            android:layout_alignParentStart="true">

            <TextView
                android:layout_marginLeft="20dp"
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="mail             "
                android:textSize="20sp"
                />

            <EditText
                android:id="@+id/email_student"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:text="" />

        </LinearLayout>
        <LinearLayout

            android:id="@+id/u_pass"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/e_layout"
            android:layout_marginTop="0dp"
            android:orientation="horizontal"
            android:layout_alignParentStart="true">

            <TextView
                android:layout_marginLeft="20dp"
                android:id="@+id/pas_lay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="password    "
                android:textSize="20sp"
                />

            <EditText
                android:id="@+id/password_student"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:text="" />

        </LinearLayout>
        <LinearLayout

            android:id="@+id/u_personal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/e_layout"
            android:layout_marginTop="0dp"
            android:orientation="horizontal"
            android:layout_alignParentStart="true">

            <TextView
                android:layout_marginLeft="20dp"
                android:id="@+id/person_lay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="number        "
                android:textSize="20sp"
                />

            <EditText
                android:id="@+id/personal_number_student"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:text="" />


        </LinearLayout>
        <LinearLayout

            android:id="@+id/u_personal3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/e_layout"
            android:layout_marginTop="0dp"
            android:orientation="horizontal"
            android:layout_alignParentStart="true">

            <TextView
                android:layout_marginLeft="20dp"
                android:id="@+id/person_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="id                 "
                android:textSize="20sp"
                />

            <EditText
                android:id="@+id/your_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:text="" />


        </LinearLayout>
        <LinearLayout

            android:id="@+id/u_personal4"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/e_layout"
            android:layout_marginTop="4dp"
            android:orientation="horizontal"
            android:layout_alignParentStart="true">

            <TextView
                android:layout_marginLeft="20dp"
                android:id="@+id/person_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gender        "
                android:textSize="20sp"
                />

            <EditText
                android:id="@+id/your_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:text="" />


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/button_details"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/contact"
        android:layout_marginTop="10dp"
        >

        <Button
            android:id="@+id/dash"
            android:layout_width="wrap_content"
            android:layout_height="61dp"
            android:layout_weight="1"
            android:text="dashboard"
            />
        <Button
            android:id="@+id/update_user"
            android:layout_width="wrap_content"
            android:layout_height="61dp"
            android:layout_weight="1"
            android:text=" update"
            />
    </LinearLayout>

    <Button
        android:layout_width="140dp"
        android:layout_height="60dp"

        android:text="signout"
        android:layout_below="@+id/button_details"
        android:layout_centerHorizontal="true"
        android:id="@+id/sign_out_" />


</RelativeLayout>